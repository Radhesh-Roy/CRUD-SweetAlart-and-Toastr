@model IEnumerable<AMS.Models.Car>
@{
    int id = 1;
}


<partial name="Toaster" />


<div class="container">
    <a asp-action="CreateEdit" asp-controller="Car" class="btn btn-primary">Add Car</a>

    <table class="table table-bordered shadow my-3 table-responsive" id="CustomerTable" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Model</th>
                <th>Milece</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var car in Model)
            {
                <tr>
                    <td>@id</td>
                    <td>@car.Name</td>
                    <td>@car.Model</td>
                    <td>@car.Milece</td>
                    <td>
                        <a asp-action="CreateEdit" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                        
                        <a asp-action="Delete" asp-controller="Car" asp-route-id="@car.Id" onclick="return confirm('Are you sure you delete this')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                id++;
            }
        </tbody>
    </table>
</div>

@section Scripts {

    <script>
        new DataTable('#CustomerTable');
    </script>
}

